@model Entities.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />

@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(r => r.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(r => r.CategoryName)
        <br /><br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextAreaFor(r => r.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(r => r.CategoryDescription)
        <br /><br />



    </div>
    <button class="btn btn-info">Kaydet</button>
}

