@model Entities.Concrete.Category
@{
    Layout = null;
}
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(r => r.CategoryName)
        @Html.ValidationMessageFor(r => r.CategoryName);
        <br /><br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextBoxFor(r => r.CategoryDescription)
        @Html.ValidationMessageFor(r => r.CategoryDescription);
        <br /><br />
        <button>Kaydet</button>


    </div>
}