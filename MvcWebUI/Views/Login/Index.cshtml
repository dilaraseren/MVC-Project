
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Admin Paneli</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/login-form-19/login-form-19/css/style.css">

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script src="~/web2/js/jquery.min.js"></script>
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Admin Paneli</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/login-form-19/login-form-19/images/bg.jpg);"></div>
                        <h3 class="text-center mb-0">Hoş Geldiniz</h3>
                        <p class="text-center">Aşağıdaki bilgileri girerek oturum açın</p>

                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" class="form-control" name="AdminUserName" placeholder="Kullanıcı Adı" required>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" class="form-control"name="AdminPassword" placeholder="*******" required>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-100 text-md-right">
                                    <a href="#">Şifrenizi mi unuttunuz ?</a>
                                </div>
                            </div>
                           
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş Yap </button>
                            </div>
                        }
                       
                        <div class="w-100 text-center mt-4 text">

                            <a href="/AdminCategory/Index">Ana Sayfaya Dön</a>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>


    <script src="~/login-form-19/login-form-19/js/jquery.min.js"></script>
    <script src="~/login-form-19/login-form-19/js/popper.js"></script>
    <script src="~/login-form-19/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/login-form-19/login-form-19/js/main.js"></script>

</body>
</html>


